<Window x:Class="NetManagement.ComputerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetManagement"
        mc:Ignorable="d"
        Title="ComputerManagement" Height="685" Width="1265" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="ComputerDataGrid" HorizontalAlignment="Left" Height="310" Margin="10,101,0,0" VerticalAlignment="Top" Width="891" AutoGenerateColumns="False" TabIndex="7" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Computer Id" Width="150" Binding="{Binding ComputerId}" />
                <DataGridTextColumn Header="Computer Name" Width="150" Binding="{Binding ComputerName}" />
                <DataGridTextColumn Header="Status" Width="100" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Used By Member" Width="150" Binding="{Binding UsedByMember}" />
                <DataGridTextColumn Header="CostPerHour" Width="170" Binding="{Binding CostPerHour}" />
                <DataGridTextColumn Header="Used By Member Navigation" Width="170" Binding="{Binding UsedByMemberNavigation}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="SearchListComputer" HorizontalAlignment="Left" Height="50" Margin="253,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278" TextAlignment="Center"/>
        <ComboBox x:Name="StatusComboBox" HorizontalAlignment="Left" Height="50" Margin="605,24,0,0" VerticalAlignment="Top" Width="157"/>
        <Button x:Name="SearchComputer" Content="Search" HorizontalAlignment="Left" Height="50" Margin="34,24,0,0" VerticalAlignment="Top" Width="144" TabIndex="2" Click="SearchComputer_Click" />
        <Button x:Name="ButtonQuit" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="979,335,0,0" VerticalAlignment="Top" Width="103" Click="ButtonQuit_Click" />

    </Grid>
</Window>
