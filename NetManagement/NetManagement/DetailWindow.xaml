<Window x:Class="NetManagement.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetManagement"
        mc:Ignorable="d"
        Title="DetailWindow" Height="550" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Member Details" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,10">
            <!-- MemberId (ReadOnly) -->
            <Label Content="Member ID"/>
            <TextBox x:Name="txtMemberId" IsReadOnly="True"/>

            <!-- AccountName -->
            <Label Content="Account Name"/>
            <TextBox x:Name="txtAccountName"/>

            <!-- Password -->
            <Label Content="Password"/>
            <PasswordBox x:Name="txtPassword"/>

            <!-- FullName -->
            <Label Content="Full Name"/>
            <TextBox x:Name="txtFullName"/>

            <!-- Phone -->
            <Label Content="Phone"/>
            <TextBox x:Name="txtPhone"/>

            <!-- CitizenId -->
            <Label Content="Citizen ID"/>
            <TextBox x:Name="txtCitizenId"/>

            <!-- Money -->
            <Label Content="Money"/>
            <TextBox x:Name="txtMoney"/>

            <!-- DateCreated (ReadOnly) -->
            <Label Content="Date Created"/>
            <TextBox x:Name="txtDateCreated" IsReadOnly="True"/>

            <!-- Status (ReadOnly or ComboBox if editable) -->
            <Label Content="Status"/>
            <TextBox x:Name="txtStatus" IsReadOnly="True"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
